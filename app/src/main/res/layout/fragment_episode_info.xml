<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:clickable="true">



    <ImageView
            android:id="@+id/imageEpisode"
            android:layout_width="match_parent"
            android:layout_height="300sp"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"/>



    <ImageView
            android:id="@+id/btnBackEpisodeInfo"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_light" />

    <TextView
            android:id="@+id/episodeInfoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnBackEpisodeInfo"
            android:layout_below="@+id/imageEpisode"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:text="Title"
            android:textColor="#2e2e2e"
            android:textSize="28sp"
            android:textStyle="bold" />

    <TextView
            android:id="@+id/episodeInfoDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/episodeInfoTitle"
            android:layout_below="@+id/episodeSeasonAndEpisode"
            android:layout_marginTop="10sp"
            android:text="Description"
            android:textSize="16sp"
            android:maxLines="5"
            android:textColor="#505050"/>

    <TextView
            android:id="@+id/episodeSeasonAndEpisode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/episodeInfoDescription"
            android:layout_below="@+id/episodeInfoTitle"
            android:layout_marginBottom="0sp"
            android:layout_marginTop="20sp"
            android:text="S E"
            android:textColor="@color/Before"
            android:textSize="16sp"
            android:textStyle="bold" />

    <ImageView
            android:id="@+id/imgComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/episodeInfoDescription"
            android:layout_below="@+id/episodeInfoDescription"
            android:layout_marginTop="31dp"
            app:srcCompat="@drawable/ic_message_circle" />

    <TextView
            android:id="@+id/comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgComments"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/imgComments"
            android:text="Comments"/>




</RelativeLayout>
</ScrollView>