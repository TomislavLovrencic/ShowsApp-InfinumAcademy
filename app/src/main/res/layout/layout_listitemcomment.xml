<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <View
            android:id="@+id/view_toolbar"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewUserComment"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="7sp"
            android:layout_marginRight="7sp"
            android:background="@android:color/darker_gray" />

    <ImageView

            android:id="@+id/imageView5"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_marginBottom="15sp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/img_placeholder_user_2" android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"/>

    <TextView
            android:id="@+id/textViewUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/imageView5"
            android:text="user@gmail.com"
            android:textSize="16sp"
            android:textColor="@color/After" />

    <TextView
            android:id="@+id/textViewUserComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textViewUserEmail"
            android:layout_below="@+id/textViewUserEmail"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:text="User comment" />

</RelativeLayout>