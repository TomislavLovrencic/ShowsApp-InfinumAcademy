<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_width="312dp"
        android:layout_height="335dp">


    <NumberPicker
            android:id="@+id/numberPicker2"
            android:layout_width="69dp"
            android:layout_height="165dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="64dp"
            android:layout_marginTop="88dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/numberPicker1" android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"/>
    <NumberPicker
            android:id="@+id/numberPicker1"
            android:layout_width="69dp"
            android:layout_height="165dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="88dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="68dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="68dp"/>

    <TextView
            android:id="@+id/textViewNumberPickerSeason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/Before"
            android:layout_below="@+id/numberPicker1"
            android:layout_toRightOf="@+id/numberPicker1"
            android:text="Season"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="76dp" android:layout_marginStart="76dp"/>

    <TextView
            android:id="@+id/textViewNumberPickerEpisode"
            android:layout_width="wrap_content"
            android:textColor="@color/Before"
            android:layout_height="0dp"
            android:layout_toLeftOf="@+id/numberPicker1"
            android:text="Episode"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewNumberPickerSeason"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="52dp"/>
    <TextView
            android:text="SAVE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonNumberPickerSave"
            android:layout_marginTop="44dp"
            android:outlineAmbientShadowColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="260dp"
            android:textColor="@color/Before"
            android:background="@android:color/white"
            android:layout_marginStart="260dp"
            app:layout_constraintTop_toBottomOf="@+id/numberPicker2"/>

</androidx.constraintlayout.widget.ConstraintLayout>